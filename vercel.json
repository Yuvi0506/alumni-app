{
  "routes": [
    { "src": "/login", "dest": "/login.html" },
    { "src": "/signup", "dest": "/html/signup.html" },
    { "src": "/verify-email", "dest": "/html/verify-email.html" },
    { "src": "/forgot-password", "dest": "/html/forgot-password.html" },
    { "src": "/reset-password", "dest": "/html/reset-password.html" },
    { "src": "/profile", "dest": "/html/profile.html" },
    { "src": "/html/index.html", "dest": "/html/index.html" },
    { "src": "/html/profile.html", "dest": "/html/profile.html" },
    { "src": "/html/header.html", "dest": "/html/header.html" },
    { "src": "/html/footer.html", "dest": "/html/footer.html" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/login.html" }
  ]
}